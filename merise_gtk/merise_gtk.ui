<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.3 -->
<interface>
  <!-- interface-name merise_gtk.ui -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.18"/>
  <requires lib="libadwaita" version="1.4"/>
  <object class="GtkApplicationWindow" id="root-window">
    <property name="decorated">False</property>
    <property name="default-height">600</property>
    <property name="default-width">1400</property>
    <property name="title">MeriseGTK</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="mgtk-header">
            <child>
              <object class="AdwSplitButton" id="mgtk.open-btn">
                <property name="action-name">mgtk.open-btn.choose</property>
                <property name="label">Open</property>
                <property name="menu-model">proj-menu</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="undo-btn">
                <property name="action-name">mgtk.undo-btn.click</property>
                <property name="icon-name">edit-undo-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="mgtk.redo-btn">
                <property name="action-name">mgtk.redo-btn.click</property>
                <property name="icon-name">edit-redo-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="mgtk.main-menu">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">mgtk-menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkOverlay">
            <child type="overlay">
              <object class="GtkStack" id="mgtk-stack">
                <property name="transition-type">crossfade</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkOverlay">
                        <property name="child">
                          <object class="GtkGrid">
                            <property name="column-homogeneous">True</property>
                            <property name="row-homogeneous">True</property>
                            <child>
                              <object class="GtkPicture" id="mgtk.logo">
                                <layout>
                                  <property name="column">1</property>
                                  <property name="column-span">3</property>
                                  <property name="row">1</property>
                                  <property name="row-span">4</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <menu id="proj-menu"/>
  <menu id="mgtk-menu">
    <item>
      <attribute name="action">mgtk_menu.mk_proj</attribute>
      <attribute name="label">New Project</attribute>
    </item>
    <section>
      <submenu>
        <attribute name="label">Add file</attribute>
        <item>
          <attribute name="action">mgtk_menu.add_db</attribute>
          <attribute name="label">Add DB</attribute>
        </item>
        <item>
          <attribute name="action">mgtk_menu.add_script</attribute>
          <attribute name="label">Add script</attribute>
        </item>
      </submenu>
    </section>
    <section>
      <item>
        <attribute name="action">mgtk_menu.save</attribute>
        <attribute name="label">Save</attribute>
      </item>
      <item>
        <attribute name="action">mgtk_menu.close</attribute>
        <attribute name="label">Close project</attribute>
      </item>
    </section>
  </menu>
</interface>
